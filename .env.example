# ===================================
# LabZoon 环境变量配置模板
# ===================================
# 请复制此文件为 .env 并填写实际值
# cp .env.example .env

# -----------------------------------
# Supabase 配置 (必填 - Frontend Public Credentials)
# -----------------------------------
# Project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Anon / Publishable Key (公开密钥 - 前端使用)
# 在 Dashboard > Settings > API 中找到 "anon" 或 "public" 密钥
VITE_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------
# API 配置 (必填 - Frontend)
# -----------------------------------
# 开发环境指向本地后端服务器
VITE_API_URL=http://localhost:5000/api

# -----------------------------------
# 后端服务器配置 (仅服务器端需要)
# -----------------------------------
PORT=5000

# Service Role / Secret Key (私密密钥 - 后端专用)
# 警告：拥有数据库完全访问权限，切勿在前端代码中使用！
# 在 Dashboard > Settings > API 中找到 "service_role" 或 "secret" 密钥
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# -----------------------------------
# AI 服务配置
# -----------------------------------
# 服务提供商: google 或 openai
VITE_AI_PROVIDER=google

# API Key (根据 Provider 选择填写)
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_OPENAI_API_KEY=your-openai-api-key

# Base URL (可选，用于第三方兼容接口如 DeepSeek, Moonshot 等)
# 例如: https://api.deepseek.com/v1
VITE_AI_BASE_URL=

# -----------------------------------
# AI 模型配置
# -----------------------------------
# 文本生成模型
VITE_AI_TEXT_MODEL=gemini-2.5-flash

# 图像生成模型
VITE_AI_IMAGE_MODEL=gemini-2.5-flash-image

# -----------------------------------
# 生成参数 (Generation Config)
# -----------------------------------
# Temperature (0-1): 值越高回答越有创意但可能不准确
VITE_AI_TEMPERATURE=0.3

# Top P (0-1): 核采样参数
VITE_AI_TOP_P=0.95

# Top K: 采样候选数量
VITE_AI_TOP_K=40

# Max Output Tokens: 最大输出长度 (设为 0 使用模型默认值)
VITE_AI_MAX_OUTPUT_TOKENS=40000

# -----------------------------------
# 应用配置 (可选)
# -----------------------------------
# 应用端口 (默认 3000)
PORT=3000

